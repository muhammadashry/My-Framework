<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests">
    <parameter name="userGrid" value="true"></parameter>
    <test name="User registration using firefox" preserve-order="false">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="createanaccounttests.CreateAnAccountTests">
                <methods><include name="createValidAccount"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="User registration using chrome" preserve-order="false">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="purchaseproduct.PurchaseProduct">
                <methods><include name="purchaseProduct"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
